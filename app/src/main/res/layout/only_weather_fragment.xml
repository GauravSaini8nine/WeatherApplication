<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scroll"
    android:layout_margin="5dp"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".ui.MainActivity"
    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">


            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/bubblegum_sans"
                android:gravity="center"
                android:text="@string/new_delhi"
                android:textColor="@color/black"
                android:textSize="40sp"
                android:textStyle="bold" />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/ic_location"
                />


            <TextView
                android:id="@+id/textView_condition"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="8dp"
                android:fontFamily="@font/bubblegum_sans"
                android:gravity="center"
                android:textAllCaps="true"
                android:textColor="@color/black"
                android:textSize="34sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="@+id/toolbar"
                tools:text="Patchy " />

            <ImageView
                android:id="@+id/imageView_condition_icon"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_marginTop="20dp"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/ic_sun"
                tools:tint="#F6A315" />

            <TextView
                android:id="@+id/avg_Temperature"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"

                android:fontFamily="@font/fredoka_one"
                android:text="@string/_20_c"
                android:textColor="@color/black"
                android:textSize="80sp" />

            <TextView
                android:id="@+id/feelsLike_temp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:fontFamily="@font/amaranth"
                android:textColor="@color/black"
                android:textSize="17dp"
                tools:text="feelsLike" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="20dp"
                    android:background="@drawable/entity_background"
                    android:gravity="center"
                    android:orientation="horizontal">
                    <androidx.cardview.widget.CardView
                        android:layout_width="95dp"
                        android:layout_margin="10dp"
                        android:layout_height="120dp"
                        app:cardCornerRadius="5dp"
                        android:elevation="20dp">
                    <LinearLayout
                        android:layout_width="95dp"
                        android:layout_height="120dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:orientation="vertical"
                        android:padding="8dp">

                        <ImageView
                            android:id="@+id/iv1234"
                            android:layout_width="45dp"
                            android:layout_height="45dp"
                            android:layout_gravity="center_horizontal"
                            android:padding="10dp"
                            android:textColor="@color/black"
                            android:src="@drawable/ic_wind" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Wind Speed"
                            android:fontFamily="@font/amaranth"
                            android:textColor="@color/black"/>


                        <TextView
                            android:id="@+id/wind_Speed"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/_5_3_m_s"
                            android:fontFamily="@font/amaranth"
                            android:textColor="@color/black"
                            android:textSize="18sp" />


                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="95dp"
                        android:layout_margin="10dp"
                        android:layout_height="120dp"
                        app:cardCornerRadius="5dp"
                        android:elevation="20dp">
                    <LinearLayout
                        android:layout_width="95dp"
                        android:layout_height="120dp"
                        android:layout_marginLeft="5dp"
                        android:gravity="center"
                        android:layout_marginRight="5dp"
                        android:orientation="vertical"
                        android:padding="8dp">

                        <ImageView
                            android:layout_width="45dp"
                            android:layout_height="45dp"
                            android:layout_gravity="center_horizontal"
                            android:padding="10dp"
                            android:src="@drawable/ic_visibility"
                            app:tint="@color/black" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Visibility"
                            android:fontFamily="@font/amaranth"
                            android:textColor="@color/black"/>

                        <TextView
                            android:id="@+id/visibility"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:minLines="2"
                            android:fontFamily="@font/amaranth"
                            android:textColor="@color/black"
                            android:text="@string/_5_3_km"
                            android:textSize="18sp" />
                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="95dp"
                        android:layout_margin="10dp"
                        android:layout_height="120dp"
                        app:cardCornerRadius="5dp"
                        android:elevation="20dp">
                    <LinearLayout
                        android:layout_width="95dp"
                        android:layout_height="120dp"
                        android:layout_marginLeft="5dp"
                        android:gravity="center"

                        android:layout_marginRight="5dp"
                        android:orientation="vertical"

                        android:padding="8dp">

                        <ImageView
                            android:layout_width="45dp"
                            android:layout_height="45dp"
                            android:padding="10dp"
                            android:layout_marginTop="-18dp"
                            android:src="@drawable/ic_shield"
                            app:tint="@color/black" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="UV Index"
                            android:fontFamily="@font/amaranth"
                            android:textColor="@color/black"/>

                        <TextView
                            android:id="@+id/textView_Uv"
                            android:textColor="@color/black"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/amaranth"
                            android:text="@string/_5_3_km"
                            android:textSize="18sp" />
                    </LinearLayout>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>



<!--                <LinearLayout-->
<!--                    android:layout_width="match_parent"-->
<!--                    android:layout_height="wrap_content"-->
<!--                    android:gravity="center"-->
<!--                    android:orientation="horizontal"></LinearLayout>-->
            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Forecast"
                android:textColor="@color/black"
                android:textSize="25dp"
                android:textStyle="bold"
                android:layout_marginLeft="20dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Next 3 Days"
                android:textColor="@color/black"
                android:textSize="15dp"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="20dp"/>



            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/future_recycler_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Weather Details"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="25dp"
                android:layout_marginLeft="20dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Today"
                android:textColor="@color/black"
                android:textSize="15dp"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="20dp"/>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:gravity="center"
                android:background="@drawable/entity_background"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal">
                    <androidx.cardview.widget.CardView
                        android:layout_width="95dp"
                        android:layout_margin="10dp"
                        android:layout_height="120dp"
                        app:cardCornerRadius="5dp"
                        android:elevation="20dp">
                    <LinearLayout
                        android:layout_width="95dp"
                        android:layout_height="120dp"

                        android:layout_marginLeft="5dp"
                        android:gravity="center"

                        android:layout_marginRight="5dp"
                        android:orientation="vertical"
                        android:padding="8dp">

                        <ImageView
                            android:layout_width="45dp"
                            android:layout_height="45dp"
                            android:layout_gravity="center_horizontal"
                            android:padding="10dp"
                            android:src="@drawable/ic_humidity" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Humidity"
                            android:fontFamily="@font/amaranth"
                            android:textColor="@color/black"/>

                        <TextView
                            android:id="@+id/textView_humidity"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:text="@string/humidity"
                            android:fontFamily="@font/amaranth"
                            android:textColor="@color/black"
                            android:textSize="18sp" />
                    </LinearLayout>

                </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                        android:layout_width="95dp"
                    android:layout_margin="10dp"
                    android:layout_height="120dp"
                    app:cardCornerRadius="5dp"
                    android:elevation="20dp">
                    <LinearLayout
                        android:layout_width="95dp"
                        android:layout_height="120dp"
                        android:layout_marginLeft="5dp"
                        android:gravity="center"

                        android:layout_marginRight="5dp"
                        android:orientation="vertical"
                        android:padding="8dp">




                        <ImageView
                            android:layout_width="45dp"
                            android:layout_height="45dp"
                            android:layout_gravity="center_horizontal"
                            android:padding="10dp"
                            android:src="@drawable/ic_pressureblack"
                            app:tint="@color/black" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Pressure"
                            android:fontFamily="@font/amaranth"
                            android:textColor="@color/black"/>

                        <TextView
                            android:id="@+id/textView_pressure"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"

                            android:fontFamily="@font/amaranth"
                            android:textColor="@color/black"
                            android:text="@string/pressure"
                            android:textSize="18sp" />
                    </LinearLayout>
            </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                        android:layout_width="95dp"
                        android:layout_margin="10dp"
                        android:layout_height="120dp"
                        app:cardCornerRadius="5dp"
                        android:elevation="20dp">
                    <LinearLayout
                        android:layout_width="95dp"
                        android:layout_height="120dp"
                        android:layout_marginLeft="5dp"
                        android:gravity="center"
                        android:layout_marginRight="5dp"
                        android:orientation="vertical"
                        android:padding="8dp">

                        <ImageView
                            android:layout_width="45dp"
                            android:layout_height="45dp"
                            android:layout_gravity="center_horizontal"
                            android:padding="10dp"
                            android:src="@drawable/ic_wind_gusts"
                            app:tint="@color/black" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Gust"
                            android:fontFamily="@font/amaranth"
                            android:textColor="@color/black"/>

                        <TextView
                            android:id="@+id/textView_gust"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"

                            android:fontFamily="@font/amaranth"
                            android:textColor="@color/black"
                            android:text="@string/gust"
                            android:textSize="18sp" />
                    </LinearLayout>
                    </androidx.cardview.widget.CardView>

            </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal">
                    <androidx.cardview.widget.CardView
                        android:layout_width="95dp"
                        android:layout_margin="10dp"
                        android:layout_height="120dp"
                        app:cardCornerRadius="5dp"
                        android:elevation="20dp">

                    <LinearLayout
                        android:layout_width="96dp"
                        android:layout_height="120dp"
                        android:layout_marginLeft="5dp"
                        android:gravity="center"

                        android:layout_marginRight="5dp"
                        android:orientation="vertical"
                        android:padding="8dp">

                        <ImageView
                            android:layout_width="45dp"
                            android:layout_height="45dp"
                            android:layout_gravity="center_horizontal"
                            android:padding="10dp"
                            android:src="@drawable/ic_precipitation"
                            app:tint="@color/black" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Precipitation"
                            android:fontFamily="@font/amaranth"
                            android:textColor="@color/black"/>

                        <TextView
                            android:id="@+id/textView_precipitation"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"

                            android:fontFamily="@font/amaranth"
                            android:textColor="@color/black"
                            android:text="@string/precipitation"
                            android:textSize="18sp" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                        android:layout_width="95dp"
                        android:layout_margin="10dp"
                        android:layout_height="120dp"
                        app:cardCornerRadius="5dp"
                        android:elevation="20dp">
                    <LinearLayout
                        android:layout_width="95dp"
                        android:layout_height="120dp"
                        android:layout_marginLeft="5dp"
                        android:gravity="center"
                        android:layout_marginRight="5dp"
                        android:orientation="vertical"
                        android:padding="8dp">

                        <ImageView
                            android:layout_width="45dp"
                            android:layout_height="45dp"

                            android:layout_gravity="center_horizontal"
                            android:padding="10dp"
                            android:src="@drawable/ic_cloud"
                            app:tint="@color/black" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Clouds"
                            android:fontFamily="@font/amaranth"
                            android:textColor="@color/black"/>

                        <TextView
                            android:id="@+id/clouds"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"

                            android:fontFamily="@font/amaranth"
                            android:textColor="@color/black"
                            android:text="@string/clouds"
                            android:textSize="18sp" />
                    </LinearLayout>

                </androidx.cardview.widget.CardView>


                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <include
            layout="@layout/weather_fragment"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="@+id/linearLayout"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>


</ScrollView>